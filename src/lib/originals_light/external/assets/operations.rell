operation mint_asset(
  asset_id: byte_array,
  amount: integer,
  accounts: list<byte_array>?
) {
  ft_auth.authenticate();

  assets.mint_asset(asset_id, amount, accounts);
}

operation register_asset(
  name: text,
  symbol: text,
  decimals: integer,
  blockchain_rid: byte_array,
  icon_url: text,
  type: text = ft_assets.ASSET_TYPE_FT4,
  asset_attributes: list<attributes.simple_attribute>?,
) {
  ft_auth.authenticate();

  assets.register_asset(
    name,
    symbol,
    decimals,
    blockchain_rid,
    icon_url,
    type,
    asset_attributes
  );
}

operation register_and_mint_asset(
  name: text,
  symbol: text,
  decimals: integer,
  blockchain_rid: byte_array,
  icon_url: text,
  type: text = ft_assets.ASSET_TYPE_FT4,
  asset_attributes: list<attributes.simple_attribute>?,
  accounts: list<byte_array>?,
  amount: integer
){
  ft_auth.authenticate();

  assets.register_and_mint_asset(
    name,
    symbol,
    decimals,
    blockchain_rid,
    icon_url,
    type,
    asset_attributes,
    accounts,
    amount
  );
}