operation mint_asset(
  asset_id: byte_array,
  amount: integer,
  accounts: list<byte_array>?
) {
  ft_auth.authenticate();

  assets.mint_asset(asset_id, amount, accounts);
}

operation register_asset(
  name: text,
  symbol: text,
  decimals: integer,
  blockchain_rid: byte_array,
  icon_url: text,
  type: text = ft_assets.ASSET_TYPE_FT4,
  attributes: list<(
    attribute_name: text,
    type: attributes.attribute_type,
    attribute_value: byte_array
  )>?,
) {
  val account = ft_auth.authenticate();

  assets.register_asset(
    account,
    name,
    symbol,
    decimals,
    blockchain_rid,
    icon_url,
    type,
    attributes
  );
}

operation register_and_mint_asset(
  name: text,
  symbol: text,
  decimals: integer,
  blockchain_rid: byte_array,
  icon_url: text,
  type: text = ft_assets.ASSET_TYPE_FT4,
  attributes_list: list<(
    attribute_name: text,
    type: attributes.attribute_type,
    attribute_value: byte_array
  )>,
  accounts: list<byte_array>?,
  amount: integer
) {
  val account = ft_auth.authenticate();
  val asset = assets.register_asset(
    account,
    name,
    symbol,
    decimals,
    blockchain_rid,
    icon_url,
    type,
    attributes_list
  );

  assets.mint_asset(
    asset.id,
    amount,
    accounts
  );

  for(attribute in attributes_list) {
    attributes.add_attribute_to_asset(
      account,
      attributes.attribute_dto(
        asset_id = asset.id,
        name = attribute.attribute_name,
        type = attribute.type,
        value = attribute.attribute_value
      )
    );
  }
}